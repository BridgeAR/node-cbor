#!/usr/bin/env node

var cbor = require('../lib/cbor');
var BufferStream = require('../lib/BufferStream');
var package = require('../package.json');

var opts = require('commander')
.version(package.version)
.usage('[options] <file ...>')
.option('-x, --hex', 'Hex string output')
.parse(process.argv)

var argv = opts.args
if (argv.length === 0) {
  argv.push('-');
}

