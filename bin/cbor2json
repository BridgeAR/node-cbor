#!/usr/bin/env node

var fs = require('fs');
var cbor = require('../lib/cbor');
var argv = process.argv.slice(2);

if (argv.length === 0) {
  argv = ['-'];
}

function parse(stream, cb) {
  var p = new cbor.ParseStream();
  p.on('error', function(er) {
    process.strderr.write(er);
    process.exit(1);
  });
  p.on('msg', function(obj) {
    console.log(JSON.stringify(obj, null, 2));
  });
  p.on('end', cb);
  stream.pipe(p);
}

var i=0;
function parseNext() {
  if (i >= argv.length) {
    return;
  }
  var f = argv[i++];
  if (f === '-') {
    parse(process.stdin, parseNext);
  } else {
    parse(fs.createReadStream(f), parseNext);
  }
}

parseNext();
